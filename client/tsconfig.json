{
    "compilerOptions": {
        /* Basic Options */
        "target": "es5",
        "module": "esnext",
        "lib": [
            "dom",
            "es5",
            "scripthost"
        ],
        "allowJs": true,
        "jsx": "react",
        "jsxFactory": "h",
        // "outDir": "./dist",
        "rootDir": "./",
        "removeComments": true,
        "noEmitOnError": true,
        /* Strict Type-Checking Options */
        "strict": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,
        /* Advanced Options */
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts"
    ]
}